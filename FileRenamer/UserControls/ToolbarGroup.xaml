<UserControl
	x:Class="FileRenamer.UserControls.ToolbarGroup"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<Grid Name="MyPanel" MinWidth="48" >
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
		</Grid>
		<TextBlock Style="{StaticResource ToolbarGroupHeaderStyle}" Text="{x:Bind Header, Mode=OneWay}" />
		<Line Style="{StaticResource ToolbarGroupSeparatorStyle}" />
	</Grid>
</UserControl>
